<h3>Restaurants</h3>
<div class="tabledata">
  <table>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
    </tr>
    <% for restaurant in @restaurants %>
    <tr>
      <td><%=h restaurant.name -%></td>
      <td><%=h restaurant.category -%></td>
      <td><%=h restaurant.description -%></td>
      <td><%= link_to 'Edit', edit_group_restaurant_path(@group, restaurant) %></td>
      <td><%= link_to 'Delete', group_restaurant_path(@group, restaurant),
              :method => :delete,
              :confirm => "Are you sure you want to delete this restaurant?" %></td>
    </tr>
    <% end %>
  </table>
</div>
<p>
<%= link_to 'New Restaurant', new_group_restaurant_path -%> 
</p>
