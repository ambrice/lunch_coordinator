<h3>Add Restaurant</h3>
<% form_for [@group, @restaurant] do |f| %>
  <%= f.error_messages -%>
  <p>
    <%= f.label :name, 'Restaurant Name' -%><br/>
    <%= f.text_field :name -%>
  </p>
  <p>
    <%= f.label :description, 'Description' -%><br/>
    <%= f.text_field :description -%>
  </p>
  <p>
    <%= f.label :tags_list, 'Tags' -%><br/>
    <%= f.text_field :tags_list -%>
  </p>
  <%= f.submit "New" -%>
<% end %>
